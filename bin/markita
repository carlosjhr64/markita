#!/usr/bin/env ruby
require 'help_parser'
require 'markita'

OPTIONS = HelpParser[Markita::VERSION, <<HELP]
Usage:
  markita [:options+]
Options:
  --root=DIRECTORY \t ~/vimwiki
  --bind=BIND      \t 0.0.0.0
  --port=PORT      \t 8080
  --allowed=IPS
  --no_about
  --no_favicon
  --no_highlight
  --no_navigation
  --no_login
  --no_plugs
Types:
  DIRECTORY /^~?[\\/\\w\\.]+$/
  BIND      /^[\\w\\.]+$/
  PORT      /^\\d+$/
  THEME     /^[\\w\\.]+$/
  IPS       /^[\\d\\.\\,]+$/
# NOTE:
# Assuming site is in ~/vimwiki,
# when ~/vimwiki/.valid-id is set with a sha256sum of a password,
# that password will restrict the site.
# Allowed IPs bypass the need for site password
# when the site is accessed from those locations.
HELP
begin
  Markita.run!
rescue LoadError
  HelpParser::REDTTY["#{$!.class}: #{$!.message}"]
  exit 72
rescue RuntimeError
  HelpParser::REDTTY["#{$!.class}: #{$!.message}"]
  exit 65
rescue Exception
  $stderr.puts $!.backtrace
  HelpParser::REDTTY["#{$!.class}: #{$!.message}"]
  exit 70
end
